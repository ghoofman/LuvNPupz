extends /layouts/default

block body-contents
	h1 Notification,
	p.text-larger A foster application was just submitted to #{brand}:
	if enquiry.name || enquiry.email
		p.text-larger From 
			if enquiry.name
				| <strong>#{enquiry.name}</strong>
			if enquiry.name && enquiry.email
				|  (
			if enquiry.email
				| <a href="mailto:#{enquiry.email}">#{enquiry.email}</a>
			if enquiry.name && enquiry.email
				| )
	if enquiry.phone
		p.text-larger Phone: #{enquiry.phone}
	
	p.text-muted Sent #{enquiry._.createdAt.format()}
	p &nbsp;
	+button({ url: '/keystone/enquiries/' + enquiry.id, label: 'Open Keystone' })
